@using BankManagement.ViewModels
@model AccountDetailsViewModel
@{
    ViewData["Title"] = "ViewDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h1 style="text-align: center; color: #009879;">Full Account Details</h1>
<br />

<h2 style="color: #009879;" >Customer Information:</h2>

<table class="styled-table">
    <thead>
        <tr>
            <td>Customer ID</td>
            <td>SSN</td>
            <td>Name</td>
            <td>Age</td>
            <td>Address</td>
            <td>City</td>
            <td>State</td>
            <td>Last Updated</td>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.customer.CID</td>
            <td>@Model.customer.SSN</td>
            <td>@Model.customer.Name</td>
            <td>@Model.customer.Age</td>
            <td>@Model.customer.Address1</td>
            <td>@Model.customer.City</td>
            <td>@Model.customer.State</td>
            <td>@Model.customer.LastUpdated</td>
        </tr>
    </tbody>
</table>
<br />

<h2 style="color: #009879;">Account Information:</h2>

<table class="styled-table">
    <thead>
        <tr>
            <td>Account ID</td>
            <td>Customer ID</td>
            <td>Type</td>
            <td>Balance</td>
            <td>Last Updated</td>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.account.AID</td>
            <td>@Model.account.CID</td>
            <td>@Model.account.AccountType</td>
            <td>@Model.account.Balance</td>
            <td>@Model.account.LastUpdated</td>
        </tr>
    </tbody>
</table>
<br />
<br />
<br />
<br />
<br />
<table align="center">
    <tr>
        <td>
            <a asp-action="Index" asp-controller="Account" class="btn btn-success btn-block btn-lg">Back to the Index Page</a>
        </td>
    </tr>
</table>
<br />


