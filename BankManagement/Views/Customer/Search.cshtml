@using BankManagement.ViewModels; 
@model FormViewModel;



<h1>Search</h1>
<b>Search By Customer ID Or SSN:</b>

<form asp-action="Search">
    <input type="text" asp-for="ID" />

    <select asp-for="selection">
        <option value="CID">CID</option>
        <option value="SSN">SSN</option>
    </select>

    <input type="submit" value="Search" />
</form>

@if (ViewBag.SSNMessage != null)

{
    @if (ViewBag.SSNMessage == "DoNotDisplay")
    {
        <table align="center">
            <tr>
                <td>
                    <button type="button" class="btn btn-danger btn-sm"> SSN number not in the database </button>
                </td>
            </tr>
        </table>
    }
}
@if (ViewBag.CIDMessage != null)
{
    @if (ViewBag.CIDMessage == "DoNotDisplay")
    {
        <table align="center">
            <tr>
                <td>
                    <button type="button" class="btn btn-danger btn-sm"> Customer ID number not in the database </button>
                </td>
            </tr>
        </table>
    }
}


@Html.ActionLink("Back to Index", "Index")


